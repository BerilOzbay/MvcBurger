@model MvcBurger.Entities.EkstraMalzeme

@{
    ViewData["Title"] = "Create";
}


<h4>Ekstra Malzeme Ekranı</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label"></label>
                <input asp-for="Fiyat" class="form-control" />
               <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Ekstra Malzeme Listesi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
