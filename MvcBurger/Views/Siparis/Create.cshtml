@model MvcBurger.Entities.Siparis

@{
    ViewData["Title"] = "Create";
}
<h4>Siparis Ekleme</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Menü</label>
                <select name="MenuId" class="form-select" asp-for="Menuler" asp-items="@(new SelectList(ViewBag.Menuler1,"Id","Ad"))">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Ekstra Malzeme</label>
                <select name="extraId" class="form-select" asp-for="EkstraMalzemeler" asp-items="@(new SelectList(ViewBag.EkstraMalzemeler1,"Id","Adi"))">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Boyut</label><br />
                <input name="size" type="radio" asp-for="Buyukluk" value="Kucuk" /> Küçük<br />
                <input name="size" type="radio" asp-for="Buyukluk" value="Orta" /> Orta<br />
                <input name="size"  type="radio" asp-for="Buyukluk" value="Buyuk" /> Büyük<br />
                <span asp-validation-for="Buyukluk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiparisSayisi" class="control-label"></label>
                <input name="quantity" asp-for="SiparisSayisi" class="form-control" />
                <span asp-validation-for="SiparisSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToplamFiyat" class="control-label"></label>
                <input asp-for="ToplamFiyat" class="form-control" />
                <span asp-validation-for="ToplamFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-warning btn-sm" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
