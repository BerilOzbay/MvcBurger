@model MvcBurger.Entities.Siparis

@{
    ViewData["Title"] = "Create";
}
<h4>Siparis Ekleme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Menü</label>
                <select class="form-select" asp-items="@(new SelectList(ViewBag.Menuler1,"Id","Ad"))" onchange="Hesapla()">
                </select>

            </div>
            <div class="form-group">
                <label class="control-label">Ekstra Malzeme</label>
                <select class="form-select" asp-items="@(new SelectList(ViewBag.EkstraMalzemeler1,"Id","Adi"))" onchange="Hesapla()">
                </select>

            </div>
            <div class="form-group">
                <label class="control-label">Boyut</label><br />
                <input type="radio" asp-for="Buyukluk" value="Kucuk" onchange="Hesapla()" /> Küçük<br />
                <input type="radio" asp-for="Buyukluk" value="Orta" onchange="Hesapla()" /> Orta<br />
                <input type="radio" asp-for="Buyukluk" value="Buyuk" onchange="Hesapla()" /> Büyük<br />
                <span asp-validation-for="Buyukluk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiparisSayisi" class="control-label"></label>
                <input asp-for="SiparisSayisi" class="form-control" onchange="Hesapla()" />
                <span asp-validation-for="SiparisSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToplamFiyat" class="control-label"></label>
                <input readonly asp-for="ToplamFiyat" class="form-control" />
                <span asp-validation-for="ToplamFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if (Model != null && Model.ToplamFiyat != null)
    {
        <script>
            var hesaplananToplamFiyat = @Model.ToplamFiyat;

            function Hesapla() {
                document.getElementById("ToplamFiyat").value = hesaplananToplamFiyat.toFixed(2);
            }
        </script>
    }
}
